<div class="row">
  <div class="col-sm-6">
    <h1>Promotions</h1>
  </div>

  <div class="col-sm-6 text-right">
    <%= link_to new_promotion_path, class: 'btn btn-primary' do %>
    Add New Promotion
    <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Promocode</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @promotions.each do |promotion| %>
      <%= content_tag :tr, id: dom_id(promotion), class: dom_class(promotion) do %>
      <td><%= promotion.title %></td>
      <td><%= promotion.description %></td>
      <td><%= promotion.promocode %></td>
      <td><%= link_to 'Show', promotion %></td>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>